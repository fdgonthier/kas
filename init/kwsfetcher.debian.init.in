#!/bin/sh
### BEGIN INIT INFO
# Provides:          kwsfetcher
# Required-Start:    $remote_fs $syslog
# Required-Stop:     $remote_fs $syslog
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Teambox Collaboration Daemon, Web fetcher
# Description:       Teambox Collaboration Daemon, Web fetcher
### END INIT INFO

PATH=/sbin:/usr/sbin:/bin:/usr/bin
DESC="Teambox Web Client Fetcher"
NAME=kwsfetcher
PIDFILE="/var/run/${NAME}.pid"
DAEMON="@@PREFIX@@/bin/kprocmonitor"
DAEMON_ARGS="-p ${PIDFILE} -t @@PREFIX@@/bin/kwsfetcher"
SCRIPTNAME=${NAME}
XNAME="/usr/bin/python"
YNAME="python"
PYTHONPATH="@@PREFIX@@/share/python-support/kpython"

export PYTHONPATH

# Execute the LSB helpers
source /lib/lsb/init-functions

running() {
    if [ -f $PIDFILE ]; then
        PID=`cat $PIDFILE`
        if ps $PID >/dev/null; then
            return 0
        else
            return 1
        fi
    else
        return 1
    fi
}

case "$1" in
    start)
        if ! running; then
            $DAEMON $DAEMON_ARGS
        fi
        # kprocmonitor isn't instantaneous so we have to wait a bit
        # here.
        sleep 1
        # Make sure it's running.
        if running; then
            log_success_msg $DESC
        else
            log_failure_msg $DESC
        fi
;;
status)
        if running; then
            echo "Running"
            exit 0
        else
            echo "Not running"
            exit 3
        fi
;;
stop)
        if running; then
            killproc -p $PIDFILE -d 5 -TERM $DAEMON
        fi
        if ! running; then
            log_success_msg $DESC
        else
            log_failure_msg $DESC
        fi
;;

restart)
        $0 stop
  	$0 start
;;

*)
        echo "Usage: $0 {status|start|stop|restart}"
        exit 1
esac
